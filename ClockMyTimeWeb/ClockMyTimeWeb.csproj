    </None>
    <None Update="ClientApp\src\components\ResumeComponents\Contact - Copy %282%29 - Copy.js">
      <DependentUpon>Contact - Copy (2).js</DependentUpon>
    </None>
    <None Update="ClientApp\src\components\ResumeComponents\Contact - Copy %282%29 - Copy.js.map">
      <DependentUpon>Contact - Copy (2).js.map</DependentUpon>
    </None>
    <None Update="ClientApp\src\components\ResumeComponents\Contact - Copy %282%29.js">
      <DependentUpon>Awards.js</DependentUpon>
    </None>
    <None Update="ClientApp\src\components\ResumeComponents\Contact - Copy %282%29.js.map">
